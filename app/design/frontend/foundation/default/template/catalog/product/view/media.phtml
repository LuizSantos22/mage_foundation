/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
$_product = $this->getProduct();
$_helper = $this->helper('catalog/output');
?>
<div class="product-image">
    <?php if (date("Y-m-d") >= substr($_product->getNewsFromDate(), 0, 10) && date("Y-m-d") <= substr($_product->getNewsToDate(), 0, 10)) { ?>
        <div class="new-ribbon"><span><?php echo $this->__('Neu') ?></div>
    <?php } ?>
    <?php if ($_product->getFinalPrice() < $_product->getPrice()) { ?>
        <?php $_savingPercent = 100 - round(($_product->getFinalPrice() / $_product->getPrice()) * 100); ?>
        <div class="special-ribbon"><span><?php echo $_savingPercent; ?><?php echo $this->__(' % Rabatt') ?></span></div>
    <?php } ?>
    <a href="<?php echo $this->helper('catalog/image')->init($_product, 'image') ?>" class="item">
        <img class="lazy" data-src="<?php echo $this->helper('catalog/image')->init($_product, 'image')->constrainOnly(false)->keepAspectRatio(true)->keepFrame(true)->resize(500, 500) ?>"
             alt="<?php echo $this->escapeHtml($this->getImageLabel()) ?>"
             title="<?php echo $this->escapeHtml($this->getImageLabel()); ?>"
             width="500"
             height="500" />
    </a>
    <?php
    $attributeCodevideo = 'video';
    $attributevideo = $_product->getResource()->getAttribute($attributeCodevideo);
    $contentvideo = $attributevideo->getFrontend()->getValue($_product);
    $attributeCodethreesixty = 'threesixty';
    $attributethreesixty = $_product->getResource()->getAttribute($attributeCodethreesixty);
    $contentthreesixty = $attributethreesixty->getFrontend()->getValue($_product);
    $_helper = $this->helper('catalog/output');

    ?>
    <?php if (count($this->getGalleryImages()) > 0 || !empty($contentthreesixty)): ?>
        <div class="product-images">
            <ul class="pimages owl-carousel owl-theme">
                <?php if (!empty($contentthreesixty)) { ?>
                    <li><a class="item" data-iframe="true"
                           data-src="<?php echo $_helper->productAttribute($this->getProduct(), $contentthreesixty, $attributeCodethreesixty) ?>"><img
                                    src="<?php echo $this->getSkinUrl('dist/assets/img/360-degree.jpg') ?>"
                                    alt="360Â° Ansicht"/></a></li>
                <?php } ?>
                <?php foreach ($this->getGalleryImages() as $_image): ?>
                    <li>
                        <a href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile()); ?>"
                           title="<?php echo $this->htmlEscape($_image->getLabel()) ?>" class="item">
                            <img class="lazy" data-src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->constrainOnly(false)->keepAspectRatio(true)->keepFrame(true)->resize(120, 120); ?>"
                                 alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>"
                                 title="<?php echo $this->htmlEscape($_image->getLabel()) ?>"
                                 width="120"
                                 height="120"/>
                        </a>
                    </li>
                <?php endforeach; ?>
            </ul>
        </div>
    <?php endif; ?>
</div>
<script>
    jQuery('.product-image').lightGallery({
        selector: '.item',
        thumbnail: true,
        hash: false
    });

    if (jQuery('.new-ribbon, .special-ribbon').length) {
        jQuery('.new-ribbon, .special-ribbon').click(function () {
            jQuery('.product-image a.item:first-of-type > img').trigger('click');
        });
    };

    jQuery('.pimages').owlCarousel({
        margin: 10,
        items: 5,
        lazyLoad: true,
        loop: false,
        nav: true,
        navText: ['<i class="fa fa-chevron-left" aria-hidden="true"></i>', '<i class="fa fa-chevron-right" aria-hidden="true"></i>'],
        dots: false,
        autoplay: false,
        responsiveClass: true,
        responsive: {
            0: {items: 3},
            640: {items: 4},
            1024: {items: 5}
        }
    });
</script>